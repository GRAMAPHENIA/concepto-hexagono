---
import Svggit from "./socials/Svggit.astro";
import Svginst from "./socials/Svginst.astro";
import Svgface from "./socials/Svgface.astro";

const today = new Date();
---

<footer>
  <span class="copy">&copy;</span>
  {today.getFullYear()} Concepto Hex√°gono.
  <p>
    Sitio creado por <a href="birdie">Bird</a> & <a href="fang">Fang</a>.
  </p>
  <div class="social-links">
    <a href="/" target="_blank">
      <Svgface />
    </a>
    <a href="/" target="_blank">
      <Svginst />
    </a>
    <a href="/" target="_blank">
      <Svggit />
    </a>
  </div>
