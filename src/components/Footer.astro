<!-- Estilos CSS -->

<style>
  footer {
    text-align: center;
    /* padding-top: 10rem; */
  }

  a {
    color: var(--link);
  }
  a:hover {
    text-decoration: 3px underline var(--link);
    color: var(--light);
  }

  p {
    padding: 0%;
  }

  .social-links {
    display: flex;
    justify-content: center;
    text-align: center;
    gap: 0.5rem;
  }

  /* ESTILOS PROPIOS */
  .copy {
    color: var(--link);
  }
</style>

<!-- Fin de estilos CSS -->
