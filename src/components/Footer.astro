---
import Svggit from "./socials/Svggit.astro";
import Svginst from "./socials/Svginst.astro";
import Svgface from "./socials/Svgface.astro";

const today = new Date();
---

<footer>
  &copy; {today.getFullYear()} Concépto Hexágono.
  <p>
    Sitio creado por <a href="birdie">Bird</a> & <a href="fang">Fang</a>.
  </p>
  <div class="social-links">
    <a href="/" target="_blank">
      <Svgface />
    </a>
    <a href="/" target="_blank">
      <Svginst />
    </a>
    <a href="/" target="_blank">
      <Svggit />
    </a>
  </div>
</footer>

<!-- Estilos CSS -->

<style>
  footer {
    text-align: center;
  }
  a {
    color: var(--link);
  }
  a:hover {
    text-decoration: 2px underline var(--link);
    color: var(--light);
  }
  .social-links {
    display: flex;
    justify-content: center;
    text-align: center;
    gap: 0.5rem;
  }
</style>

<!-- Fin de estilos CSS -->
