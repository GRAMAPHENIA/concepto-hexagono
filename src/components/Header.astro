---
import Svggit from "./socials/Svggit.astro";
import Svginst from "./socials/Svginst.astro";
import Svgface from "./socials/Svgface.astro";
import LogoIcono from "./LogoIcono.astro";
---

<header>
  <nav>
    <a href="/"><LogoIcono /></a>
    <nav class="internal-links">
      <a href="/">Inicio</a>
      <a href="/servicios">Servicios</a>
      <a href="/acercade">Acerca de</a>
    </nav>
    <div class="social-links">
      <a href="/" target="_blank">
        <Svgface />
      </a>
      <a href="/" target="_blank">
        <Svginst />
      </a>
      <a href="/" target="_blank">
        <span class="sr-only">Go to Gramaphenia & BirdieOA GitHub repos</span>
        <Svggit />
      </a>
    </div>
  </nav>
</header>

<style>
  header {
    width: 720px;
    max-width: calc(100% - 2em);
    margin: auto;
    justify-content: center;
  }

  a {
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--link);
  }

  a:hover {
    color: var(--light);
    text-decoration: 6px underline var(--link);
    text-underline-offset: 6px;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 1rem;
    gap: 1rem;
  }
  .social-links {
    display: flex;
  }

  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
